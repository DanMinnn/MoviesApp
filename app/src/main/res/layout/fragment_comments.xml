<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="@color/bground"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="10dp">

        <TextView
            android:id="@+id/total_comment"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="24.6k Comments"
            android:textStyle="bold"
            android:textColor="@color/white"
            android:textSize="20sp"
            android:layout_weight="1"/>

        <TextView
            android:id="@+id/see_all"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="See all"
            android:textColor="@color/light_red"
            android:fontFamily="@font/roboto_medium"
            android:gravity="center"
            android:layout_weight="1"
            android:layout_marginLeft="100dp"/>

    </LinearLayout>


    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/recViewComments"
                android:layout_width="match_parent"
                android:layout_height="match_parent"/>

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:layout_marginTop="10dp"
                app:cardCornerRadius="20dp"
                android:layout_gravity="bottom"
                android:elevation="100dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="82dp"
                    android:orientation="horizontal"
                    android:layout_gravity="center"
                    android:background="@drawable/custom_cardview_comment">

                    <EditText
                        android:id="@+id/edAddComment"
                        android:layout_width="280dp"
                        android:layout_height="wrap_content"
                        android:background="@drawable/custom_input"
                        android:hint="Add comment..."
                        android:textColorHint="@color/grey"
                        android:padding="15dp"
                        android:textColor="@color/white"
                        android:textSize="15sp"
                        android:maxLines="3"
                        android:layout_marginLeft="30dp"
                        android:layout_marginRight="10dp"
                        android:layout_gravity="center"/>

                    <ImageView
                        android:id="@+id/send_cmt_imv"
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:src="@drawable/send_comment_ic"
                        android:padding="15dp"
                        android:background="@drawable/custom_send_button_cmt"
                        android:layout_gravity="center"
                        android:layout_marginLeft="10dp"/>
                </LinearLayout>

            </androidx.cardview.widget.CardView>
        </LinearLayout>
    </androidx.core.widget.NestedScrollView>
</LinearLayout>