<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".activity.EditProfileActivity"
    android:orientation="vertical"
    android:background="@color/bground">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbarEdit"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="@color/bground"
            app:layout_scrollFlags="scroll|enterAlways"
            app:popupTheme="@style/AppThem.PopupOverlay" >

            <ImageButton
                android:id="@+id/toolbar_back_btnEdit"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_arrow_back"
                android:layout_gravity="start|center_vertical"
                android:background="?android:attr/selectableItemBackgroundBorderless" />

            <TextView
                android:id="@+id/toolbar_EditPro5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:paddingLeft="12dp"
                android:text="Edit Profile"
                android:textStyle="bold"
                android:textColor="@color/white"
                android:textSize="21sp"/>

        </androidx.appcompat.widget.Toolbar>

        <com.google.android.material.imageview.ShapeableImageView
            android:id="@+id/user_imageView"
            android:layout_width="140dp"
            android:layout_height="140dp"
            android:scaleType="centerCrop"
            android:background="@drawable/avatar_user"
            android:layout_gravity="center"
            android:layout_marginTop="50dp"
            app:shapeAppearanceOverlay="@style/roundedImageViewAvatarUser"/>

        <com.google.android.material.imageview.ShapeableImageView
            android:id="@+id/imvAvtEdit"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@drawable/edit_ic"
            android:background="@color/light_red"
            android:scaleType="fitXY"
            app:contentPadding="5dp"
            android:layout_marginTop="-35dp"
            android:layout_gravity="center"
            android:layout_marginLeft="50dp"
            app:shapeAppearanceOverlay="@style/roundedImvEdit"/>


        <EditText
            android:id="@+id/edFullName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Full name"
            android:padding="15dp"
            android:textSize="16sp"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"
            android:layout_marginTop="35dp"
            android:textColor="@color/white"
            android:textColorHint="@color/grey"
            android:background="@drawable/input_edit_pro5"
            android:maxLines="1"/>

        <TextView
            android:id="@+id/txtEnterName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Please enter your full name !"
            android:layout_marginBottom="5dp"
            android:layout_marginLeft="70dp"
            android:textColor="#F30B0B"
            android:textStyle="bold"
            android:visibility="invisible"/>

        <EditText
            android:id="@+id/edNickName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Username"
            android:padding="15dp"
            android:textSize="16sp"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"
            android:textColor="@color/white"
            android:textColorHint="@color/grey"
            android:background="@drawable/input_edit_pro5"
            android:maxLines="1"/>

        <TextView
            android:id="@+id/txtEnterAlias"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Please enter your username !"
            android:layout_marginBottom="5dp"
            android:layout_marginLeft="70dp"
            android:textColor="#F30B0B"
            android:textStyle="bold"
            android:visibility="invisible"/>

        <EditText
            android:id="@+id/edEmail_Edit"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Email"
            android:padding="15dp"
            android:textSize="16sp"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"
            android:textColor="@color/white"
            android:textColorHint="@color/grey"
            android:background="@drawable/input_edit_pro5"
            android:editable="false"
            android:maxLines="1"/>

        <EditText
            android:id="@+id/edPhoneNumber"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Phone number"
            android:padding="15dp"
            android:textSize="16sp"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"
            android:layout_marginTop="25dp"
            android:textColor="@color/white"
            android:textColorHint="@color/grey"
            android:background="@drawable/input_edit_pro5"
            android:inputType="phone"
            android:maxLines="1"/>

        <TextView
            android:id="@+id/txtEnterPhone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Please enter your phone number !"
            android:layout_marginLeft="70dp"
            android:textColor="#F30B0B"
            android:textStyle="bold"
            android:visibility="invisible"/>

        <Button
            android:id="@+id/btnUpdatePro5"
            android:layout_width="335dp"
            android:layout_height="55dp"
            android:layout_gravity="center"
            android:text="Update"
            android:textColor="@color/white"
            android:fontFamily="@font/roboto_medium"
            android:backgroundTint="@color/light_red"
            android:layout_marginTop="25dp"/>

    </LinearLayout>

</LinearLayout>